{
  "manifest_version": 3,
  "name": "Simple Color Picker",
  "version": "1.0",
  "description": "A very basic and simple color picker",
  "permissions": ["storage", "clipboardWrite"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon.png"
    }
  },
  "background": {
    "service_worker": "service-worker.js"
  }
}
